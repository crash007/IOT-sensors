extends layout
block append head
//link(href="/stylesheets/c3.min.css", rel="stylesheet")

block content
	div(class="container")		
		.panel.panel-default.sensor-panel
			.panel-heading
				h3.panel-title All sensors
			.panel-body
				#sensorList
					table.table
						thead
							th Name
							th Description
							th User
							th Json
						tbody						
							each s in sensors
								tr
									td
										a(href="/sensor/"+s.name) #{s.name}
									td #{s.description}
									td
										a(href="/sensors?username="+s.username) #{s.username}
									td
										a(href="/sensor/"+s.name+"/json") json

        
block scripts
