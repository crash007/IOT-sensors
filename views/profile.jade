extends layout

block content
  
  <!-- Begin page content -->
  div.container
    div(class="page-header")

      
    if (!user)
      h1 Orchestrate User Authentication
        |     
        p Sign in and view your profile!
        |     
        p
          a.btn.btn-primary.btn-lg(href='/signin', role='button')
            span.glyphicon.glyphicon-user
            |         Sign in!
    if (user)
      .jumbotron
        h1 Orchestrate User Authentication
          |     
          p Below is your profile information!
        |   
        .panel.panel-default
          .panel-heading
            h3.panel-title Profile Information
          |     
          .panel-body
            p Username: #{user.username}
            |       
            p
              | Avatar: 
              img(src='{user.avatar}')

  