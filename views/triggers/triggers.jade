extends ../layout


	
block content
	.container.body
		h3 Triggers 
		
		
		if(user)
			h4 Twitter
			if(triggers) 
				table.table.table-striped
					thead
						tr
							th Name
							th Sensor
					tbody
						
						each sensor in triggers
							//#{sensor.name}
							each trigger in sensor.twitter
								tr
									th #{trigger.name} 
										a(href="/triggers/twitter/edit")
											span(title="Edit", aria-hidden="true").glyphicon.glyphicon-edit
									th 
										a(href="/sensor/#{sensor.name}") #{sensor.name}

			a.btn.btn-primary(href="/triggers/twitter/add") Configure a new Twitter trigger
		else
			p 
				a(href="/signin") Sign in 
				| to see your triggers and create new ones.
		