extends ../layout


	
block content
	.container.body
		h3 Triggers 
		
		
		if(user)
			if(sensors) 
				table.table.table-striped
					thead
						tr
							th Name
							th Sensor
					tbody
						
						each sensor in sensors
							#{sensor.name}
							if(sensor.triggers)
								each trigger in sensor.triggers
									tr
										th #{trigger.name} 
											a(href="/triggers/twitter/edit/#{trigger.name}")
												span(title="Edit", aria-hidden="true").glyphicon.glyphicon-edit
										th 
											a(href="/sensor/#{sensor.name}") #{sensor.name}

			a.btn.btn-primary(href="/triggers/add") Configure a new trigger
		else
			p 
				a(href="/signin") Sign in 
				| to see your triggers and create new ones.
		